@import 'nib'
@import 'rupture'
@import url('//fonts.googleapis.com/css?family=Lato:300,400');


// Rupture media query for PureCSS
rupture.scale = 0 568px 768px 1024px 1280px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

.lato
  font-family 'Lato', sans-serif
  font-weight 400
.lato-light
  font-family 'Lato', sans-serif
  font-weight 300
  
/* Spacer */
$spacer = 5, 10, 20, 30, 40, 60, 70, 80, 100, 150, 200

for _val in $spacer
  .spacer-{ _val }
    height ( _val * 1px )
    clearfix()

html,
body
  min-height 100%
  @extends .lato-light
  background #000
  color #fff

a
  color #ccc
  text-decoration none
  box-shadow inset 0 -1px 0 0 #ccc
  transition all 0.5s ease
  &:hover
    color #fff
    box-shadow inset 0 -1px 0 0 #fff

h1, h2, h3
  @extends .lato-light
h4, h5, h6
  @extends .lato
  
.p
  padding 20px 40px
  
.c
  max-width 560px